    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const canvasOpen = document.querySelector('.canvas__open');
        const canvasWrapper = document.querySelector('.offcanvas-menu-wrapper');
        const canvasOverlay = document.querySelector('.offcanvas-menu-overlay');
        const closeBtn = document.querySelector('.mobile-menu-close');
        const sizeBarItems = document.querySelectorAll('.size-bar-item');

        // Set active state based on current page
        const currentPath = window.location.pathname;
        sizeBarItems.forEach(item => {
            const itemPath = item.getAttribute('href');
            if (currentPath === itemPath) {
                item.classList.add('active');
            }
        });

        // Handle menu open/close
        canvasOpen.addEventListener('click', function(e) {
            e.stopPropagation();
            canvasWrapper.classList.add('active');
            canvasOverlay.classList.add('active');
            document.body.style.overflow = 'hidden'; // Prevent scrolling when menu is open
        });

        function closeMenu() {
            canvasWrapper.classList.remove('active');
            canvasOverlay.classList.remove('active');
            document.body.style.overflow = ''; // Restore scrolling
        }

        canvasOverlay.addEventListener('click', closeMenu);
        closeBtn.addEventListener('click', closeMenu);

        // Close menu when clicking outside
        document.addEventListener('click', function(e) {
            if (!canvasWrapper.contains(e.target) && !canvasOpen.contains(e.target)) {
                closeMenu();
            }
        });

        // Handle size bar item clicks
        sizeBarItems.forEach(item => {
            item.addEventListener('click', function() {
                sizeBarItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });
    });
    </script>

