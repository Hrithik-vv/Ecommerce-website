        .address-option {
            display: flex;
            align-items: flex-start;
            margin-bottom: 15px;
            padding: 15px;
            border: 1px solid #e1e1e1;
            border-radius: 5px;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
