<%- include("../../views/partials/user/header") %>

    <style>
        /* Modern Cart Styles */
        :root {
            --primary: #000000;
            --secondary: #f5f7fa;
            --text: #2c3e50;
            --light-text: #95a5a6;
            --border: #edf2f7;
            --danger: #e74c3c;
            --success: #2ecc71;
        }

        .shopping-cart {
            padding: 4rem 0;
            background-color: var(--secondary);
        }

        .cart-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
            padding: 2rem;
        }

        .shopping__cart__table table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 1rem;
        }

        .shopping__cart__table th {
            color: var(--text);
            font-weight: 600;
            padding: 1rem;
            text-align: left;
            border-bottom: 2px solid var(--border);
        }

        .shopping__cart__table td {
            padding: 1rem;
            color: var(--text);
            vertical-align: middle;
        }

        /* Quantity Controls */
        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--secondary);
            padding: 0.5rem;
            border-radius: 8px;
            width: fit-content;
        }

        .qty-input {
            width: 50px;
            text-align: center;
            border: none;
            background: transparent;
            font-weight: 500;
            color: var(--text);
        }

        .qty-minus,
        .qty-plus {
            background: white;
            border: 1px solid var(--border);
            color: var(--text);
            width: 28px;
            height: 28px;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .qty-minus:hover,
        .qty-plus:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        /* Buttons */
        .btn-update {
            background: var(--primary);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            margin-left: 1rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-update:hover {
            background: #000000;
        }

        .remove-link {
            color: var(--danger);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s;
        }

        .remove-link:hover {
            opacity: 0.8;
        }

        /* Cart Summary */
        .cart-summary {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
        }

        .cart-total {
            font-size: 1.5rem;
            color: var(--text);
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--border);
        }

        .checkout-btn {
            display: inline-block;
            background: var(--primary);
            color: white;
            padding: 1rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.2s;
            width: 100%;
            text-align: center;
        }

        .checkout-btn:hover {
            background: #000000;
            transform: translateY(-1px);
        }

        /* Alert Messages */
        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 2rem;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        /* Empty Cart State */
        .empty-cart {
            text-align: center;
            padding: 3rem;
            color: var(--light-text);
        }
    </style>

    <section class="shopping-cart">
        <div class="container">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="cart-container">
                                        <div class="shopping__cart__table">
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th>Product</th>
                                                        <th>Price</th>
                                                        <th>Quantity</th>
                                                        <th>Total</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (cartItems.length===0) { %>
                                                        <tr>
                                                            <td colspan="5">
                                                                <div class="empty-cart">
                                                                    <h3>Your cart is empty</h3>
                                                                    <p>Add items to your cart to continue shopping</p>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% } else { %>
                                                            <% cartItems.forEach((item)=> { %>
                                                                <tr>
                                                                    <td>
                                                                        <%= item.productId.productName %>
                                                                    </td>
                                                                    <td>$<%= item.productPrice %>
                                                                    </td>
                                                                    <td>
                                                                        <form class="quantity-form" action="/cart/update" method="POST">
                                                                            <input type="hidden" name="productId" value="<%= item.productId %>">
                                                                            <div class="quantity-controls">
                                                                              <button type="button" class="qty-minus" onclick="updateQuantity(this, -1)">-</button>
                                                                              <input type="number" class="qty-input" 
                                                                                     name="quantity" 
                                                                                     value="<%= item.quantity %>" 
                                                                                     min="1">
                                                                              <button type="button" class="qty-plus" onclick="updateQuantity(this, 1)">+</button>
                                                                            </div>
                                                                            <button type="submit" class="btn-update">Update</button>
                                                                          </form>
                                                                    </td>
                                                                    <td>$<%= item.totalPrice %>
                                                                    </td>
                                                                    <td>
                                                                        <a href="/remove-from-cart/<%= item.productId._id %>"
                                                                            class="remove-link">Remove</a>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <% if (cartItems.length> 0) { %>
                                    <div class="col-lg-4">
                                        <div class="cart-summary">
                                            <h3 class="cart-total">Total: $<%= cartItems.reduce((acc, item)=> acc +
                                                    item.totalPrice, 0).toFixed(2) %></h3>
                                            <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
        </div>
    </section>

    <script>
        function validateNumber(input) {
            if (input.value < 1) input.value = 1;
            if (isNaN(input.value)) input.value = 1;
        }

        function validateQuantity(form) {
            const input = form.querySelector('.qty-input');
            if (input.value < 1 || isNaN(input.value)) {
                alert('Please enter a valid quantity');
                return false;
            }
            return true;
        }

        function updateQuantity(button, change) {
            const form = button.closest('.quantity-controls').parentElement;
            const input = form.querySelector('.qty-input');
            let newVal = parseInt(input.value) + change;
            if (newVal < 1) newVal = 1;
            input.value = newVal;
        }
    </script>

    <%- include("../../views/partials/user/footer") %>