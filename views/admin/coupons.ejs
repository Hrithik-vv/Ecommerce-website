<style>
    .content-main{
        width: 1200px;
        margin-left: 280px;
    }
    .col-md-3 {
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 10px;
      margin: 10px;
      background: #f8f9fa;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
  
    .error-message {
      color: red;
      font-size: 14px;
      margin-top: 5px;
    }
  
    .form-label {
      font-weight: 600;
      color: #333;
    }
  
    .form-control {
      width: 100%;
      padding: 10px;
      border: 1px solid #bbb;
      border-radius: 5px;
      box-sizing: border-box;
      font-size: 16px;
      background: #fff;
