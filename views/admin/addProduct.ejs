        --primary-color: #4f46e5;
        --error-color: #ef4444;
        --border-color: #e5e7eb;
        --text-color: #374151;
      }

      .content-header .content-title {
        font-size: 2rem;
        font-weight: 700;
        color: #343a40;
      }

